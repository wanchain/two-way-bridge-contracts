{
  "compilerOptions": {
    "target": "ES2021",
    "outDir": "./dist",
    "module": "commonjs",
    "rootDir": "./",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "allowJs": true,
    "types": ["jest","node"]
  },
  "include": ["./**/**/*"],
  "exclude": [
    "node_modules",
    "./**/*.spec.ts",
    "./log/**/**/*",
    "./data/**/*"
  ]
}
